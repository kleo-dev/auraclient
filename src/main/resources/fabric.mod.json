{
  "schemaVersion": 1,
  "id": "auraclient",
  "version": "${version}",
  "name": "auraclient",
  "description": "A local cape mod for fabric with support for animated capes",
  "authors": [
    "IIpho3nix",
    "kleo-dev"
  ],
  "contact": {
    "website": "https://iipho3nix.me",
    "sources": "https://github.com/IIpho3nix/IIpho3nix-s-Capes-Mod"
  },
  "license": "GPL-3.0",
  "icon": "assets/auraclient/icon.png",
  "environment": "client",
  "entrypoints": {
    "main": [
      "org.auraclient.auraclient.AuraClient"
    ]
  },
  "mixins": [
    "auraclient.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
